block variables
doctype html
html
  head
    meta(charset="utf-8")
    link(rel="shortcut icon", href="/favicon.ico")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    meta(name="theme-color", content="#000000")
    title News Reader | #{ feed.title }
    link(rel="stylesheet" href="/styles.css")
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Nata+Sans:wght@100..900&display=swap" rel="stylesheet")
  body
    div#root
        .header
            div.main
                a(href="/").site-title= title
                ul.nav
                    li
                        a(href="/business") Business
                    li
                        a(href="/entertainment") Entertainment
                    li
                        a(href="/sports") Sports
                    li
                        a(href="/tech") Technology
                    li
                        a(href="/world") World
        block layout-content
        .footer
            div
                p= "Powered by News Reader using RSS feeds. Last updated: " + date
                if feed.copyright
                    p.copyright= feed.copyright
                else
                    p.copyright= "Â© 2023 News Reader. All rights reserved."
    